@model IEnumerable<BukyBookWeb.Models.Product>

@{
    int currentPage = ViewBag.PageNumber;
    int totalPages = ViewBag.TotalPages;
    string search = ViewBag.Search;
}

<div class="row pt-4 mb-2">
    <div class="col-6">
        <h2 class="text-primary">Product</h2>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    }
</div>

<form asp-controller="Product" asp-action="Index" method="get" class="d-flex">
    <input type="text" name="search" class="form-control" placeholder="Search by name" value="@search">
    <button type="submit" class="btn btn-outline-primary ms-2">Search</button>
</form>

<div id="productList" class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4 product-card">
                <div class="card h-100 shadow-sm">

                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height:200px; object-fit:cover;" />

                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-success fw-bold">$@item.Price.ToString("0.00")</p>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                View Details
                            </a>

                            <form asp-controller="Home" asp-action="NewFeature" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { search = search, page = currentPage - 1 })">Previous</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(currentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { search = search, page = i })">@i</a>
            </li>
        }

        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { search = search, page = currentPage + 1 })">Next</a>
        </li>
    </ul>
</nav>
