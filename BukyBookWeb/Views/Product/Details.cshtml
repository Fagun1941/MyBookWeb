@model BukyBookWeb.Models.Product

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p class="text-success fw-bold h4">$@Model.Price.ToString("0.00")</p>
            <p class="text-muted">@Model.Description</p>

            <p><strong>Category of </strong> @Model.Category?.Name</p>
            <p><strong>Written by </strong> @Model.Author</p>

            <div class="mt-3">
                <form asp-controller="Home" asp-action="NewFeature" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success btn-lg">Add to Cart</button>
                </form>

                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-lg mt-2">
                    Back to Products
                </a>
            </div>
        </div>
    </div>
</div>
