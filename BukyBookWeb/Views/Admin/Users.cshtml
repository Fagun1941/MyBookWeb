@model IEnumerable<BukyBookWeb.Models.ApplicationUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@{
    ViewData["Title"] = "Manage Users";
}

<h2>@ViewData["Title"]</h2>


<div class="grid-container">
    <div class="grid-row header">
        <div class="grid-col col-name">Email</div>
        <div class="grid-col col-name">Role</div>
        <div class="grid-col col-actions">Actions</div>
    </div>


    @foreach (var obj in Model)
    {

        var roles = await UserManager.GetRolesAsync(obj);
        <div class="grid-row">
            <div class="grid-col col-name">@obj.Email</div>
            <div class="grid-col col-name">@string.Join(", ", roles)</div>
            <div class="grid-col col-actions text-center">
                <div class="btn-group" role="group">
                    @if (!roles.Contains("Admin"))
                    {
                        <form asp-action="MakeAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@obj.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Make Admin</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="RemoveAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@obj.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove Admin</button>
                        </form>
                    }

                </div>
            </div>
        </div>
    }
</div>
