@model BukyBookWeb.Models.CalculatorModel

@{
    ViewData["Title"] = "Calculator";
}

<h2>Simple Calculator</h2>

<form asp-action="Index" method="post" class="form-inline">
    <div class="form-group mb-2">
        <label for="Number1" class="me-2">Number 1:</label>
        <input asp-for="Number1" class="form-control" type="number" step="any" />
    </div>

    <div class="form-group mb-2 ms-3">
        <label for="Number2" class="me-2">Number 2:</label>
        <input asp-for="Number2" class="form-control" type="number" step="any" />
    </div>

    <div class="form-group mb-2 ms-3">
        <label for="Operation" class="me-2">Operation:</label>
        <select asp-for="Operation" class="form-select">
            <option value="">--Select--</option>
            <option value="Add">Add (+)</option>
            <option value="Subtract">Subtract (-)</option>
            <option value="Multiply">Multiply (*)</option>
            <option value="Divide">Divide (/)</option>
        </select>
    </div>

    <div class="form-group mb-2 ms-3">
        <button type="submit" class="btn btn-primary">Calculate</button>
    </div>
</form>

@if (Model.Result != null)
{
    <div class="alert alert-success mt-3">
        <strong>Result:</strong> @Model.Result
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    @if(User.IsInRole("Admin"))
    {
        <div class="alert alert-danger mt-3">
            <strong>Error:</strong> @Model.ErrorMessage
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-3">
            <strong>An Error Plz contact Developer</strong>
        </div>
    }
}
